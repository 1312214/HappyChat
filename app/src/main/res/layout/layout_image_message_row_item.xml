<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:layout_marginTop="5dp">

    <ImageView
        android:id="@+id/imageView_chatChanel_imageMsg_image"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_image_grey_250dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:padding="5dp"
        android:background="@drawable/rounded_r10dp_white_rect"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_chatChanel_imageMsg_time"
        android:textSize="13sp"
        android:text="@string/time"
        android:textColor="@color/grey_800"
        android:layout_below="@id/imageView_chatChanel_imageMsg_image"
        android:layout_alignStart="@id/imageView_chatChanel_imageMsg_image"
        android:layout_marginStart="25dp"
        android:layout_marginTop="3dp"
        android:visibility="invisible"/>

</RelativeLayout>