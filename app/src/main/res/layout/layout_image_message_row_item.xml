<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_marginTop="5dp">
    <RelativeLayout
        android:id="@+id/relativeLayout_chatChanel_imageMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/frameLayout_chatChanel_imageMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">
            <ImageView
                android:id="@+id/imageView_chatChanel_imageMsg_image"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_image_grey_250dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:background="@drawable/rounded_r20dp_white_rect_for_image_msg" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_chatChanel_imageMsg_time"
            android:textSize="13sp"
            android:text="@string/time"
            android:textColor="@color/grey_800"
            android:layout_below="@id/frameLayout_chatChanel_imageMsg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:visibility="gone"/>
    </RelativeLayout>

</FrameLayout>