<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginTop="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageView_row_item_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_account_circle_black_60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/textView_name"
            android:text="Name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imageView_row_item_avatar"
            android:layout_alignTop="@id/imageView_row_item_avatar"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/textView_last_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="last message"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_below="@id/textView_name"
            android:layout_toRightOf="@id/imageView_row_item_avatar"
            android:layout_alignLeft="@id/textView_name"
            android:layout_alignBottom="@id/imageView_row_item_avatar"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>